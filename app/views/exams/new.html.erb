<%= stylesheet_link_tag "post/post_style.css", :media => "all" %>

<svg viewBox="0 0 3387 1270">
  <path id="planePath" class="planePath" d="M-226 626c439,4 636,-213 934,-225 755,-31 602,769 1334,658 562,-86 668,-698 266,-908 -401,-210 -893,189 -632,630 260,441 747,121 1051,91 360,-36 889,179 889,179" />
  <g id="plane">
    <polygon class="fil1" points="-141,-10 199,0 -198,-72 -188,-61 -171,-57 -184,-57 " />
    <polygon class="fil2" points="199,0 -141,-10 -163,63 -123,9 " />
    <polygon class="fil3" points="-95,39 -113,32 -123,9 -163,63 -105,53 -108,45 -87,48 -90,45 -103,41 -94,41 " />
    <path class="fil4" d="M-87 48l-21 -3 3 8 19 -4 -1 -1zm-26 -16l18 7 -2 -1 32 -7 -29 1 11 -4 -24 -1 -16 -18 10 23zm10 9l13 4 -4 -4 -9 0z" />
    <polygon class="fil1" points="-83,28 -94,32 -65,31 -97,38 -86,49 -67,70 199,0 -123,9 -107,27 " />
  </g>
  <!-- Define the motion path animation -->
  <animateMotion xlink:href="#plane" dur="5s" repeatCount="indefinite" rotate="auto">
    <mpath xlink:href="#planePath" />
  </animateMotion>
</svg>

<div class="body-wrapper">

  <%= image_tag 'post-image_01.webp', id: "left-items" %>

  <div id="right-items">
    <h1 class="content title title-login">投稿</h1>

    <%= form_with model: @exam do |f| %>
      <ul style="list-style: none; width: 400px">
        <li class="content">
          <%= f.label :class_name, '授業名' %>
          <%= f.text_field :class_name, placeholder: "授業名を入力してください", size: 30 %>
        </li>
        <li class="content">
          <%= f.label :class_type, '授業' %>
          <%= f.select :class_type, [["教養", 1], ["専門", 2], ["基礎専門", 3], ["基礎", 4], ["外国語", 5], ["教職", 6]], prompt: "教科のタイプを選択してください" %>
        </li>
        <li class="content">
          <%= f.label :impression, '感想' %>
          <%= f.text_area :impression, placeholder: "感想を書いてください", size: "30*10" %>
        </li>
        <li class="content">
          <%= f.label :content, '内容' %>
          <%= f.text_area :content, placeholder: "内容を書いてください", size: "30*10" %>
        </li>
        <li class="content">
          <%= f.label :teacher_name, '先生の名前' %>
          <%= f.text_field :teacher_name, placeholder: "先生の名前を書いてください", size: 30 %>
        </li>
        <li class="content">
          <%= f.label :examdate, 'テストの日付' %>
          <%= f.date_select :examdate, placeholder: "テストの日付" %>
        </li>

      </ul>
      <%= f.submit '投稿', class: 'button' %><br>
      <small id="submit-tip" style="text-align: center;display: block">※投稿する前に確認してください</small>
    <% end %>
  </div>
</div>